{
  "name": "lego",
  "version": "0.0.0",
  "private": true,
  "engines": {
    "node": "^20.19.0 || >=22.12.0"
  },
  "scripts": {
    "prepare": "husky install",
    "preinstall": "npx only-allow pnpm",
    "pre-commit": "esno scripts/pre-commit",
    "commit-msg": "esno scripts/commit-msg",
    "dev:play": "pnpm -F @lego/playground dev"
  },
  "gitHooks": {
    "pre-commit": "pnpm pre-commit",
    "commit-msg": "pnpm commit-msg"
  },
  "lint-staged": {
    "{apps,packages}/**/*": [
      "prettier --write"
    ]
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-git",
      "czConfig": "./scripts/commitizen.js"
    }
  },
  "commitlint": {
    "extends": [
      "./scripts/.commitlintrc.js"
    ]
  },
  "dependencies": {
    "pinia": "^3.0.3",
    "vue": "^3.5.18",
    "vue-router": "^4.5.1"
  },
  "devDependencies": {
    "@tsconfig/node22": "^22.0.2",
    "@types/jsdom": "^21.1.7",
    "@types/node": "^22.16.5",
    "@vitejs/plugin-vue": "^6.0.1",
    "@vitejs/plugin-vue-jsx": "^5.0.1",
    "@vitest/eslint-plugin": "^1.3.4",
    "@vue/eslint-config-prettier": "^10.2.0",
    "@vue/eslint-config-typescript": "^14.6.0",
    "@vue/test-utils": "^2.4.6",
    "@vue/tsconfig": "^0.7.0",
    "chalk": "^5.6.0",
    "cz-git": "^1.12.0",
    "eslint": "^9.31.0",
    "eslint-plugin-vue": "~10.3.0",
    "esno": "^4.8.0",
    "fast-glob": "^3.3.3",
    "husky": "^9.1.7",
    "jiti": "^2.4.2",
    "jsdom": "^26.1.0",
    "lint-staged": "^16.1.5",
    "npm-run-all2": "^8.0.4",
    "prettier": "3.6.2",
    "sass": "^1.90.0",
    "typescript": "~5.8.0",
    "vite": "^7.0.6",
    "vite-plugin-vue-devtools": "^8.0.0",
    "vitest": "^3.2.4",
    "vue-tsc": "^3.0.4"
  }
}
